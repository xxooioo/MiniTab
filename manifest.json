{
  "manifest_version": 3,
  "name": "MiniTab",
  "version": "1.1.0",
  "description": "简洁的新标签页",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "添加到标签页",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}

